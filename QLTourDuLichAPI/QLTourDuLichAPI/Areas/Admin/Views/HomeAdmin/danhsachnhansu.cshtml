@*Loi test push*@
@{
    ViewData["Title"] = "danhsachnhanvien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@*ok*@
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Nhân viên </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Nhân viên</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách Nhân Viên</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Mã nhân viên</th>
                                <th>Tên nhân viên</th>
                                <th>Giới tính</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Userame</th>
                                
                            </tr>
                        </thead>
                        <tbody id="tbody-nhanvien">
                        </tbody>
                    </table>
                    <br />
                    <div class="text-center">Page <span id="page-number">1</span></div>
                    <div id="pagination_nhanvien"></div>
                </div>
            </div>
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Nhân Viên</h4>
                    <p class="card-description" id="card-action"></p>
                    <form class="forms-sample" id="form-nhanvien">
                        <div class="form-group">
                            <label for="MaNV">Mã Nhân Viên</label>
                            <input type="text" class="form-control" id="MaNV" placeholder="Mã địa điểm">
                        </div>
                        <div class="form-group">
                            <label for="TenNV">Tên Nhân viên</label>
                            <input type="text" class="form-control" id="TenNV" placeholder="Tên nhân viên">
                        </div>
                        <div class="form-group">
                            <label for="gioitinh">Giới tính</label>
                            <select class="form-control form-control-lg" id="gioitinh">

                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>


                            </select>
                        </div>
                        <div class="form-group">
                            <label for="sdt">Số điện thoại</label>
                            <input type="text" class="form-control" id="sdt" placeholder="Số điện thoại">
                        </div>
                        <div class="form-group">
                            <label for="diachi">Địa chỉ</label>
                            <input type="text" class="form-control" id="diachi" placeholder="Địa chỉ">
                        </div>
                        <button class="btn btn-gradient-primary me-2" onclick="InsertTranDau()">Thêm</button>
                        <button class="btn btn-gradient-primary me-2" onclick="UpdateTranDau()">Sửa</button>
                        <button class="btn btn-light" onclick="resetInput()">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/admin/layoutdmin/assets/js/nhansu.js"></script>


