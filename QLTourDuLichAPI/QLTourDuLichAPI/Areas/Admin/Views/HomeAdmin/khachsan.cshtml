
@{
    ViewData["Title"] = "khachsan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Khách sạn </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="HomeAdmin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Khách sạn</li>
            </ol>
        </nav>
    </div>

    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách Khách sạn</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr class="table-info">
                            <th>Mã Khách sạn</th>
                            <th>Tên Khách sạn</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Xếp hạng khách sạn</th>
                            <th>Ảnh</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbody-khachsan">
                    </tbody>
                </table>
                <br />
                <div class="text-center">Page <span id="page-number">1</span></div>
                <div id="pagination_khachsan"></div>
            </div>
        </div>
    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Khách sạn</h4>
                <p class="card-description" id="card-action"></p>
                <form class="forms-sample" id="form-khachsan">
                    <div class="form-group">
                        <label for="MaKS">Mã Khách sạn</label>
                        <input type="text" class="form-control" id="MaKS" placeholder="Mã khách sạn">
                    </div>
                    <div class="form-group">
                        <label for="TenKS">Tên Khách sạn</label>
                        <input type="text" class="form-control" id="TenKS" placeholder="Tên Khách sạn">
                    </div><div class="form-group">
                        <label for="DiaChi">Địa chỉ</label>
                        <input type="text" class="form-control" id="DiaChi" placeholder="Địa chỉ">
                    </div>
                    
                    <div class="form-group">
                        <label for="sdt">Số điện thoại</label>
                        <input type="text" class="form-control" id="sdt" placeholder="Số điện thoại">
                    </div>
                    <div class="form-group">
                        <label for="XHKS">Xếp hạng khách sạn</label>
                        <select class="form-control form-control-lg" id="XHKS">                            
                            <option value="5">5</option>
                            <option value="4">4</option>
                            <option value="3">3</option>
                            <option value="2">2</option>
                            <option value="1">1</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Anh">Ảnh khách sạn:</label>
                        <input type="file" id="Anh" name="Ảnh khách sạn" required>
                    </div>


                    <button type="button" class="btn btn-gradient-danger btn-icon-text" onclick="InsertKS()">
                        <i class="mdi mdi-upload btn-icon-prepend"></i>Thêm
                    </button>
                    <button type="button" class="btn btn-gradient-dark btn-icon-text" onclick="UpdateKS()">
                        Sửa <i class="mdi mdi-file-check btn-icon-append"></i>
                    </button>
                    <button type="button" class="btn btn-gradient-warning btn-icon-text" onclick="resetInput()">
                        <i class="mdi mdi-reload btn-icon-prepend"></i> Cancel
                    </button>

                </form>
            </div>
        </div>
    </div>

</div>

<script src="~/admin/layoutdmin/assets/js/khachsan.js"></script>

