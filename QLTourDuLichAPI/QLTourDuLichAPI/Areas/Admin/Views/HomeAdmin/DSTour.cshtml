@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DSTour";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Quản lý Tour Du Lịch </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tour Du Lịch</li>
            </ol>
        </nav>
    </div>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh Sách Tour Du Lịch</h4>
            <table class="table table-bordered">
                <thead>
                    <tr class="table-info">
                        <th>Mã Tour</th>
                        <th>Tên Tour</th>
                        <th>Ảnh</th>
                        <th>Xếp Hạng</th>
                        <th>Giá Chỗ</th>
                        <th>Số Ngày Đi</th>
                        <th>Điểm Xuất Phát</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                    <tbody id="tbody-Tour">
                    </tbody>
            </table>
                <br />
                <div class="text-center">Page <span id="page-number">1</span></div>
                <div id="pagination_Tour"></div>
        </div>
    </div>
</div>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tour</h4>
            <p class="card-description" id="card-action"></p>
            <form class="forms-sample" id="form-tour">
                <div class="form-group">
                    <label for="MaTour">Mã Tour</label>
                    <input type="text" class="form-control" id="MaTour" placeholder="Mã Tour">
                </div>
                <div class="form-group">
                    <label for="TenTour">Tên Tour</label>
                    <input type="text" class="form-control" id="TenTour" placeholder="Tên Tour">
                </div>
                <div class="form-group">
                    <label for="XepHangTour">Xếp Hạng Tour</label>
                    <input type="text" class="form-control" id="XepHangTour" placeholder="XepHangTour">
                </div>
                <div class="form-group">
                     <label for="GiaCho">Giá Chỗ</label>
                     <input type="text" class="form-control" id="GiaCho" placeholder="GiaCho">
                </div>
                 <div class="form-group">
                     <label for="SoNgayDL">Số Ngày Du Lịch</label>
                     <input type="text" class="form-control" id="SoNgayDL" placeholder="Số Ngày Du Lịch">
                </div>
                    <div class="form-group">
                        <label for="DXP">Điểm Xuất Phát</label>
                        <input type="text" class="form-control" id="DXP" placeholder="Điểm Xuất Phát">
                    </div>
                <div class="form-group">
                    <label for="anhdaidien">Ảnh đại diện:</label>
                    <input type="file" id="avatar" name="anhdaidien" required>
                </div>
                    <button type="button" class="btn btn-gradient-danger btn-icon-text" onclick="InsertTour()">
                        <i class="mdi mdi-upload btn-icon-prepend"></i>Thêm
                    </button>
                    <button type="button" class="btn btn-gradient-dark btn-icon-text" onclick="UpdateTour()">
                        Sửa <i class="mdi mdi-file-check btn-icon-append"></i>
                    </button>
                    <button type="button" class="btn btn-gradient-warning btn-icon-text" onclick="resetInput()">
                        <i class="mdi mdi-reload btn-icon-prepend"></i> Cancel
                    </button>
            </form>
        </div>
    </div>
</div>
</div>
<script src="~/admin/layoutdmin/assets/js/tour.js"></script>

