
@{
    ViewData["Title"] = "DSDTQuan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Quản lý Điểm Thăm Quan </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Điểm Thăm Quan</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách Điểm Thăm Quan</h4>
                    @*<p class="card-description">
                    Add class <code>.table-bordered</code>
                    </p>*@
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Mã Địa Điểm</th>
                                <th>Tên Địa Điểm</th>
                                <th>Miền</th>
                                <th>Ảnh</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbody-diemthamquan">
                        </tbody>
                    </table>
                    <br />
                    <div class="text-center">Page <span id="page-number">1</span></div>
                    <div id="pagination_diemthamquan"></div>
                </div>
            </div>
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Điểm Thăm Quan</h4>
                    <p class="card-description" id="card-action"></p>
                    <form class="forms-sample" id="form-diemthamquan">
                        <div class="form-group">
                            <label for="MaDd">Mã Địa Điểm</label>
                            <input type="text" class="form-control" id="MaDd" placeholder="Mã địa điểm">
                        </div>
                        <div class="form-group">
                            <label for="tendd">Tên Địa Điểm</label>
                            <input type="text" class="form-control" id="tendd" placeholder="Tên địa điểm">
                        </div>
                        <div class="form-group">
                            <label for="mien">Miền</label>
                            <select class="form-control form-control-lg" id="mien">
                              
                                    <option value="Bắc">Bắc</option>
                                    <option value="Trung">Trung</option>
                                    <option value="Nam">Nam</option>
                              
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="anhdaidien">Ảnh đại diện:</label>
                            <input type="file" id="avatar" name="anhdaidien" required>
                        </div>
                        <div class="form-group">
                            <label for="mota">Mô Tả</label>
                            <input type="text" class="form-control" id="mota" placeholder="Mô tả">
                        </div>
                        <button class="btn btn-gradient-primary me-2" onclick="InsertDiemThamQuan()">Thêm</button>
                        <button class="btn btn-gradient-primary me-2" onclick="UpdateDTQ()">Sửa</button>
                        <button class="btn btn-light" onclick="resetInput()">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/admin/layoutdmin/assets/js/diemthamquan.js"></script>

