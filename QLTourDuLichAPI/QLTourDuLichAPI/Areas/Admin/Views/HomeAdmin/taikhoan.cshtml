@{
    ViewData["Title"] = "taikhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Tài Khoản </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="HomeAdmin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tài Khoản</li>
            </ol>
        </nav>
    </div>

    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách tài khoản</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr class="table-info">
                            <th>UserName</th>
                            <th>Loai</th>
                            <th>Password</th>
                            <th>ConfirmPassword</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody id="tbody-taikhoan">
                    </tbody>
                </table>
                <br />
                <div class="text-center">Page <span id="page-number">1</span></div>
                <div id="pagination_taikhoan"></div>
            </div>
        </div>
    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tài khoản</h4>
                <p class="card-description" id="card-action"></p>
                <form class="forms-sample" id="form-taikhoan">
                    <div class="form-group">
                        <label for="userName">UserName</label>
                        <input type="text" class="form-control" id="userName" placeholder="UserName">
                    </div>

                    <div class="form-group">
                        @*<label for="loai">Loai</label>*@
                        <input type="hidden" class="form-control" id="loai" placeholder="UserName" value="1">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="text" class="form-control" id="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">ConfirmPassword</label>
                        <input type="text" class="form-control" id="confirmPassword" placeholder="ConfirmPassword">
                    </div>

                    <button type="button" class="btn btn-gradient-danger btn-icon-text" onclick="InsertTK()">
                        <i class="mdi mdi-upload btn-icon-prepend"></i>Thêm
                    </button>
                    <button type="button" class="btn btn-gradient-dark btn-icon-text" onclick="UpdateTK()">
                        Sửa <i class="mdi mdi-file-check btn-icon-append"></i>
                    </button>
                    <button type="button" class="btn btn-gradient-warning btn-icon-text" onclick="resetInput()">
                        <i class="mdi mdi-reload btn-icon-prepend"></i> Cancel
                    </button>
                </form>
            </div>
        </div>

    </div>
</div>

<script src="~/admin/layoutdmin/assets/js/taikhoan.js"></script>

