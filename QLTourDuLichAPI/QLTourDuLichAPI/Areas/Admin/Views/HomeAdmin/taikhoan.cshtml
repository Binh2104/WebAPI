
@{
    ViewData["Title"] = "taikhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Tài Khoản </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tài Khoản</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách tài khoản</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>UserName</th>
                                <th>Loai</th>
                                <th>Password</th>
                                <th>ConfirmPassword</th>
                                <th></th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody id="tbody-taikhoan">
                        </tbody>
                    </table>
                    <br />
                    <div class="text-center">Page <span id="page-number">1</span></div>
                    <div id="pagination_taikhoan"></div>
                </div>
            </div>
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Tài khoản</h4>
                    <p class="card-description" id="card-action"></p>
                    <form class="forms-sample" id="form-taikhoan">
                        <div class="form-group">
                            <label for="userName">UserName</label>
                            <input type="text" class="form-control" id="userName" placeholder="UserName">
                        </div>
                       
                        <div class="form-group">
                            <label for="loai">Loai</label>
                            <select class="form-control form-control-lg" id="loai">

                                <option value="0">0</option>
                                <option value="1">1</option>
                            </select>
                        </div>
                         <div class="form-group">
                           <label for="password">Password</label>
                            <input type="text" class="form-control" id="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword">ConfirmPassword</label>
                            <input type="text" class="form-control" id="confirmPassword" placeholder="ConfirmPassword">
                        </div>
                       
                        <button class="btn btn-gradient-primary me-2" onclick="InsertTK()">Thêm</button>
                        <button class="btn btn-gradient-primary me-2" onclick="UpdateTK()">Sửa</button>
                        <button class="btn btn-light" onclick="resetInput()">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/admin/layoutdmin/assets/js/taikhoan.js"></script>

